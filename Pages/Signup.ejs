<%- include("../partials/header") %>

    <form id="SignupForm" action="/SignupRequest" method="post" >

        <div class="form-outline" >
            <input type="text" class="form-control" type="text" id="username" name="username" placeholder="user name"  >
        </div>
        
        <div class="form-outline">
            <input class="form-control" type="password" id="password" name="password" placeholder="password">
        </div>
        <div class="form-outline">
            <input class="form-control" type="email" id="email" placeholder="email"  name="email" >
        </div>
        
    <button type="button" class="btn btn-large" id="SignupButton">Register</button>

    </form>

